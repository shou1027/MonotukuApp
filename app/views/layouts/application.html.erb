<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-container">
        <div class="header-logo">
          <%= link_to("モノツク","/") %>
        </div>
        <div class="header-search">
          <span class="fas fa-search fa-lg"></span>
          <form action="/posts/search" autocomplete="off">
            <input type="text" name="word" placeholder="キーワード検索">
          </form>
        </div>
        <ul class="header-nav">
          <li>
            <%= link_to("ユーザー一覧","/users") %>
          </li>
          <% if @current_user %>
            <li>
              <%= link_to("投稿する","/posts/new") %>
            </li>
            <li>
              <%= link_to("/users/#{@current_user.name}") do %>
                <%= image_tag("/user_images/#{@current_user.image_name}") %>
              <% end %>
            </li>
            <li>
              <%= link_to("ログアウト","/logout") %>
            </li>
          <% else %>
            <li>
              <%= link_to("ユーザー登録","/signup") %>
            </li>
            <li>
              <%= link_to("ログイン","/login") %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    
    <div class="flash-container">
      <div class="flash-float">
        <% if flash[:succcess] %>
          <div class="flash flash-success">
            <%= flash[:succcess] %>
          </div>
        <% elsif flash[:danger] %>
          <div class="flash flash-danger">
            <%= flash[:danger] %>
          </div>
        <% elsif flash[:notice] %>
          <div class="flash flash-notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
      <div class="error-message">
        <% if @message %>
          <% @message.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        <% end %>
      </div>
    </div>

    <%= yield %>
    
    <footer>
      <div class="footer-container">
        <div class="footer-logo">
          <%= link_to("モノツク","/") %>
        </div>
        <ul class="footer-nav">
          <li>
            <%= link_to("ABOUT","/about") %>
          </li>
          <li>
            <%= link_to("HELP","/help") %>
          </li>
        </ul>
      </div>
    </footer>
  </body>
</html>
