<% provide(:title,"ユーザー一覧") %>

<div class="index-container">
  <div class="index-contents">
    <div class="index-side index-line">
      <div class="index-side-container">
        <h1>ユーザー一覧</h1>
        <h2>索引</h2>
        <ul class="index-search-list">
          <% (("A".."Z").to_a.concat(("0".."9").to_a).append("_")).each do |word| %>
            <li>
              <%= link_to(word,"/users/search?word=#{word}") %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="index-main index-line">
      <div class="index-main-container">
        <ul class="index-user-list">
          <% @users.each do |user| %>
            <li>
              <%= link_to("/users/#{user.name}") do %>
                <%= image_tag(user.image_name.url) %>
              <% end %>
              <div class="index-user-name">
                <%= link_to(user.name,"/users/#{user.name}") %>
              </div>
            </li>
          <% end %>
          <%= paginate @users %>
        </ul>
      </div>
    </div>
  </div>
</div>