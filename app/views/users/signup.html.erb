<% provide(:title,"サインアップ") %>

<div class="signup-container">
  <div class="signup-contents">
    <h1>ユーザー登録</h1>
    <div class="signup-form">
      <%= form_tag("/users/new") do %>
        <p>ユーザー名</p>
        <input class="signup-input" name="name" type="text" value="<%= @user.name %>">
        <p>パスワード</p>
        <input class="signup-input" name="password" type="password">
        <p>パスワード(確認)</p>
        <input class="signup-input" name="confirm" type="password">
        <input class="signup-submit" type="submit" value="登録">
      <% end %>
    </div>
  </div>
</div>